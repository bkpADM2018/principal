'----------------------------------------------------------------
function GF_BD_Puertos(byval pPTO, byref pRS, byval pOP,byref pSQL)
'Está función genera la conexión con la base de datos 
on error resume next
Dim rtrn
rtrn = false
	select case(pOP)
		case "CLOSE"
			rs.close
			call disconnect
			rtrn = true
		case "OPEN"
			set pRS = server.CreateObject("ADODB.Recordset")			
			if (connect(pPTO)) then
			    pRS.CursorType = 3			    
			    if (UCase(pPTO) = "PIEDRABUENA") then			        
			        pRS.Open pSQL,connPorts,2,1
			    else				    		    
				    pRS.Open pSQL,connPorts,2,3				    
				end if				
				rtrn = true
			end if
		case "EXEC"
			if (connect(pPTO)) then
				if (pSQL <> "") then
					connPorts.execute pSQL
					rtrn = true
				end if
			end if
	end select
If Err.Number <> 0 Then rtrn = false
GF_BD_Puertos = rtrn
end function
