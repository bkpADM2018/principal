dim SEPARATION, MARGIN, PAGE_HEIGHT_SIZE, PAGE_TOP_INIT

SEPARATION = 12
MARGIN = 0
PAGE_HEIGHT_SIZE = 760
PAGE_TOP_INIT = 82
nroPagina = 1

RPT_FechaDesde = GF_Parametros7("issuedate", "", 6)
RPT_FechaHasta = GF_Parametros7("closingdate", "", 6)
